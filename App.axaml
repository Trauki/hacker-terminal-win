<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HackerTerminal.App">
    <Application.Styles>
        <StyleInclude Source="avares://HackerTerminal/Icons.axaml"/>
    </Application.Styles>
    <!-- Include our ScrollViewer control theme -->
    <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://HackerTerminal/Themes/CustomScrollBar.axaml"/>
        <ResourceInclude Source="avares://HackerTerminal/Themes/CustomScrollViewer.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
